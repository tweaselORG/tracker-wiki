{
    "baseURL": "/",
    "defaultContentLanguage": "en",
    "enableGitInfo": true,
    "module": {
        "imports": [
            {
                "path": "github.com/alex-shpak/hugo-book"
            }
        ]
    },
    "params": {
        "BookSection": "*",
        "BookTheme": "auto",
        "BookToC": false
    },
    "markup": {
        "highlight": {
            "style": "base16-snazzy",
            "lineNos": true,
            "lineNumbersInTable": false
        },
        "goldmark": {
            "renderer": {
                "unsafe": true
            }
        }
    },
    "disableLanguages": ["de"]
}
